<?xml version="1.0" encoding="UTF-8"?>
<project name="dogood" default="00.init" >
    <property name="dir.source.home" value="./" />
    <property name="host.real" value="uniearth.api.dev-whoan.xyz" />

    <property name="host.real.acc" value="dogood2021" />
    <property name="host.real.pass" value="konkuk" />

    <property name="host.webapps.root" value="/" />


    <target name="00.init">
    </target>


    <target name="01.01 real www today">
        <tstamp>
            <format property="today.date" pattern="yyyy-MM-dd" offset="0" unit="day" />
        </tstamp>

        <echo>today.date:${today.date}</echo>

        <ftp server="${host.real}"
             port="50021"
             remotedir="${host.webapps.root}"
             userid="${host.real.acc}"
             password="${host.real.pass}"
             passive="no"
             binary="true"
             verbose="yes" >
            <fileset dir="${dir.source.home}/WebContent">
                <include name="**/*" />
                <date datetime="${today.date}" pattern="yyyy-MM-dd" when="after"/>
            </fileset>
        </ftp>

        <ftp server="${host.real}"
             port="50021"
             remotedir="${host.webapps.root}/WEB-INF"
             userid="${host.real.acc}"
             password="${host.real.pass}"
             passive="no"
             binary="true"
             verbose="yes" >
            <fileset dir="${dir.source.home}/build/">
                <include name="**/*" />
                <date datetime="${today.date}" pattern="yyyy-MM-dd" when="after"/>
            </fileset>
        </ftp>

    </target>

    <target name="01.02.real www">

        <ftp server="${host.real}"
             port="50021"
             remotedir="${host.webapps.root}"
             userid="${host.real.acc}"
             password="${host.real.pass}"
             passive="yes"
             binary="true"
             verbose="yes" >
            <fileset dir="${dir.source.home}/WebContent">
                <include name="**/*" />
                <exclude name="ckeditor/*" />
                <exclude name="intro/*" />
                <exclude name="images/emo/*" />
            </fileset>
        </ftp>

        <ftp server="${host.real}"
             port="50021"
             remotedir="${host.webapps.root}/WEB-INF"
             userid="${host.real.acc}"
             password="${host.real.pass}"
             passive="yes"
             binary="true"
             verbose="yes" >
            <fileset dir="${dir.source.home}/build/">
                <include name="**/*" />
            </fileset>
        </ftp>
    </target>
</project>